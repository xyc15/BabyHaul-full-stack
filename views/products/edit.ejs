<% include ../partials/header %>
 <script>
  var proddesc = <%= product%>
  console.log(proddesc);
</script>
<div class="container text-center  mt-4 mb-2">
  <h1>Edit Baby Product</h1>
  <div class="row justify-content-center">
    <div class="col-8 col-sm-4">
      <form action="/products/<%= product._id %>?_method=PUT" method="POST">
        <div class="form-group">
                                                                    <!--use value=".." here to update to campground's new values -->
          <input class="form-control" type="text" name="product[name]" value="<%= product.name%>" >
        </div>
        <div class="form-group">
          <input class="form-control" type="number" name="product[price]" value="<%= product.price%>" >
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="product[image]" value="<%= product.image%>" >
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="product[description]" value="<%= product.description%>">
        </div>
        <button type="submit" class="btn btn-primary w-100">Edit</button>
      </form>
    </div>
  </div>
</div>

<% include ../partials/footer %>
